<div class="small-12 columns">
  <div class="small-12 centered columns">
    <h3 class="grey-text">Add Payment</h3>
  </div>
</div>
<%= form_for @payment, html: { class: "new-payment-submit", id: "new_payment_#{bill_id}" } do |f| %>
  <div class="small-12 columns red-errors" id="new-payment-errors-<%= bill_id %>">
  </div>

  <div class="small-12 columns">
    <div class="small-12 columns">
      <%= f.label :date, "Date Paid" %>
      <%= f.text_field :date, as: :datepicker, class: "datepicker", id: "datepicker-pmt-#{bill_id}" %>
    </div>
  </div>

  <div class="small-12 columns">
    <div class="small-12 columns">
      <%= f.label :amount, "Amount Paid" %>
      <%= f.text_field :amount, id: "payment_amount_#{bill_id}" %>
    </div>
  </div>

  <div class="small-12 columns">
    <div class="small-12 columns">
      <%= f.label :description %>
      <%= f.text_area :description, id: "payment_description_#{bill_id}" %>
    </div>
  </div>

  <div class="small-12 small-centered columns">
    <div>
      <%= f.submit "Submit", class: "close-reveal-modal button pill", id: "payment_submit_#{bill_id}"%>
    </div>
  </div>
<% end %>
